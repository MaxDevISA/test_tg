# Конфигурация для P2P криптобиржи с JSON хранилищем  
# Простая версия без PostgreSQL - скопируйте в .env

# Основные настройки сервера
PORT=8080
DATA_DIR=data

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_bot_token_here  
TELEGRAM_CHAT_ID=-1001234567890
TELEGRAM_WEBAPP_URL=https://your-webapp-domain.com

# Групповые уведомления (необязательно)
# ID группового чата для публикации новых заявок
TELEGRAM_GROUP_CHAT_ID=-1001234567890
# ID темы в групповом чате (необязательно, для Telegram Topics)
TELEGRAM_GROUP_TOPIC_ID=123

# Логирование  
LOG_LEVEL=info
